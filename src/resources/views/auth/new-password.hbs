<div class="body"
    style="margin: 200px 35%; border: 1px solid rgb(36, 202, 72); width: 500px; box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);">
    <div class="container-form" style="padding: 50px;">
        <h2 style="text-align: center;">Xác nhận mật khẩu mới</h2>
        {{#if errorMessage}}
        <div class="user-message-error">{{errorMessage}}</div>
        {{/if}}

        <form class="login-form" action="/mat-khau-moi" method="POST">
            <div class="form-group">
                <label for="password">Mật khẩu mới</label>
                <input type="password" class="form-control form-auth" id="password" name="password">
            </div>
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="passwordToken" value="{{passwordToken}}">

            <button type="submit" class="btn btn-primary">Đồng ý</button>
        </form>
    </div>
</div>