<div class="body">
    <div class="content-page">
        <div class="title-nav-page">
            <p class="title-page">
                Tài khoản của tôi
            </p>
            <ol class="nav-page">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tài khoản</li>
            </ol>
        </div>
    </div>
    <div style="margin: 0 30%; border-right: solid 1px rgb(7, 173, 43); border-left: solid 1px rgb(7, 173, 43)">
        <form method="POST" action="/tai-khoan" style="padding: 0 10px;">
            <div class="form-group" style="margin-top: 45px; background-color: rgba(0,0,0,.03);">
                <div>Họ:</div>
                <input type="text" class="form-control" id="firstname" name="firstname" value="{{user.firstname}}">
            </div>
            <div class="form-group" style="background-color: rgba(0,0,0,.03);">
                <div>Tên:</div>
                <input type="text" class="form-control" id="lastname" name="lastname" value="{{user.lastname}}">
            </div>
            <div style="margin-bottom: 15px;">
                <div style="background-color: rgba(0,0,0,.03);">Email:</div>
                <div>{{user.email}}</div>
            </div>
            <div class="form-group" style="background-color: rgba(0,0,0,.03);">
                <div>Số điện thoại:</div>
                <input type="text" class="form-control" id="phone" name="phone" value="{{user.phone}}">
            </div>
            <div class="form-group" style="background-color: rgba(0,0,0,.03);">
                <div>Địa chỉ:</div>
                <input type="text" class="form-control" id="address" name="address" value="{{user.address}}">
            </div>
            <button type="submit" class="btn btn-click btn-cart">Lưu</button>
        </form>
    </div>
</div>