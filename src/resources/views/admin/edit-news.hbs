<div class="body">
    <div class="content-page">
        <div class="title-nav-page">
            <p class="title-page">
                Sửa bài đăng
            </p>
            <ol class="nav-page">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Sửa bài đăng</li>
            </ol>
        </div>
    </div>
    <div class="body-admin">
        <form method="POST" action="/admin/news/{{story._id}}?_method=PUT">
            <div class="form-group">
                <label for="title-news" class="label-title-news">Tiêu đề</label>
            <input type="text" class="form-control" id="title-news" name="title" value="{{story.title}}" required>
            </div>
            <div class="form-group">
                <img src="/{{story.imgStory}}" class="img-story">
            </div>
            <div class="form-group">
                <label for="summernote">Nội dung</label>
                <textarea id="summernote" name="content" required>{{{story.content}}}</textarea>
            </div>

            <button type="submit" class="btn btn-click btn-cart btn-add">Lưu</button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.js"></script>


<script>

    $('#summernote').summernote({
        tabsize: 1,
        height: 500,
        toolbar: [
            ['style', ['bold', 'italic', 'underline', 'clear']],
            ['insert', ['link', 'picture']],
        ],
        popover: {
            image: [
                ['image', ['resizeFull', 'resizeHalf', 'resizeQuarter', 'resizeNone']],
                ['float', ['floatLeft', 'floatRight', 'floatNone']],
                ['remove', ['removeMedia']]
            ],
            air: [
                ['font', ['bold', 'underline', 'clear']],
                ['insert', ['link', 'picture']]
            ]
        },
    });

</script>